#!/usr/bin/env bash

VERSION=$1

printf "module Purity\n  VERSION = \"$VERSION\"\nend\n" > ./lib/purity/version.rb
bundle
git add Gemfile.lock lib/purity/version.rb
git commit -m "Bump version for $VERSION"
git push
git tag v$VERSION
git push --tags
gem build purity.gemspec
gem push "purity-$VERSION.gem" --host https://rubygems.org
rm "purity-$VERSION.gem"